<%= form_with(model: cnab_upload) do |form| %>
  <% if cnab_upload.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cnab_upload.errors.count, "erro") %> impediu que o upload do CNAB fosse salvo:</h2>

      <ul>
        <% cnab_upload.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :file_name, "Nome do arquivo", style: "display: block" %>
    <%= form.text_field :file_name %>
  </div>

  <% if cnab_upload.new_record? %>
    <div>
      <%= form.label :file, "Escolha o arquivo (somente .txt)", style: "display: block" %>
      <%= form.file_field :file, accept: '.txt' %>
    </div>
  <% end %>

  <div>
    <%= form.submit "Salvar", class: "submit-btn" %>
  </div>
<% end %>