<div class="auth-container">
  <h2>Entrar</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, class: "input-field", placeholder: "Digite seu e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input-field", placeholder: "Digite sua senha" %>
    </div>

    <div class="form-group actions">
      <%= f.submit "Entrar", class: "submit-btn" %>
      <%= link_to 'Esqueceu sua senha?', new_user_password_path, class: "link" %>
    </div>

    <div class="form-group">
      <%= link_to 'Cadastre-se', new_user_registration_path, class: "link" %>
    </div>
  <% end %>
</div>
