<div class="auth-container">
  <h2>Cadastre-se</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, class: "input-field", placeholder: "Digite seu e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input-field", placeholder: "Digite sua senha" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, class: "input-field", placeholder: "Confirme sua senha" %>
    </div>

    <div class="form-group actions">
      <%= f.submit "Cadastrar", class: "submit-btn" %>
    </div>

    <div class="form-group">
      <%= link_to 'Entrar', new_user_session_path, class: "link" %>
    </div>
  <% end %>
</div>
